{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/registration.tsx", "src/pages/eventManagement.tsx", "src/pages/profileManagement.js", "src/pages/profileManagement.js", "src/pages/profileManagement.jsx", "src/lib/supabaseClient.js", "src/lib/supabaseClient.js", "src/lib/supabaseClient.js"],
  "exclude": ["node_modules"]
}
